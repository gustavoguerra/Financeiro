@model IEnumerable<Financeiro.Web.Models.ContaBancariaViewModel>

@{
Layout = "_Dashboard";
} 

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<!-- <link rel="stylesheet" type="text/css" href="~/datatables/datatables.min.css"/> -->

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script> -->
<!-- <script type="text/javascript" src="~/datatables/datatables.min.js"></script> -->

<div class="content-wrapper">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Lista de Conta Bancaria</h4>
        <p class="card-description">
          <a asp-controller="ContaBancaria" asp-action="CreateOrEdit" class="btn btn-outline-primary btn-fw">
            <i class="mdi mdi-file-outline"></i>Nova Conta Bancaria</a>
        </p>
        <div class="table-responsive">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>ID</th>                              
                <th>Empresa</th>  
                <th>Banco</th>             
                <th>Agencia</th>
                <th>Conta</th>
                <th>Gerente/th>
                <th>Telefone</th>
                <th>Opções</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in @Model)
              {
                <tr class="even gradeC">
                  <td>@item.ID</td>
                  <td>@item.EMPRESANAME</td>  
                  <td>@item.DESCRICAO</td>           
                  <td>@item.AGENCIA</td>
                  <td>@item.CONTA</td>
                  <td>@item.GERENTE</td>
                  <td>@item.TELEFONE</td>
                  <td><a href="/ContaBancaria/CreateOrEdit/@item.ID">Editar</a></td>
                </tr>                  
              }          
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
    </script>